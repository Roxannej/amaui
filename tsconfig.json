{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "target": "ES2017",
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*.vue",
    "packages/**/*.js",
    "packages/**/*.jsx",
    "packages/**/*.ts",
    "packages/**/*.tsx"
   ],
  "exclude": [
    "**/build",
    "**/node_modules",
  ]
}
